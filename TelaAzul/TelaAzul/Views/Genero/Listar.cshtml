@model IEnumerable<GeneroModel>
@{
    ViewData["Title"] = "Listar";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function confirmaExclusao(id) {
        if(confirm("Excluir Gênero? ")) {
            location.href = "/Genero/Excluir/" + id;    
        }
    }
</script>

<h1>Listar Gêneros</h1>

<a href="~/Genero/Cadastro" class="btn btn-success">Cadastrar Gênero</a>

<span class="alert @ViewBag.classe">@ViewBag.msg</span>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            @for(var i = 0; i <= 6; i++)
            {
                <th scope="col"></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>   
                <td scope="row">@item.Nome</td>
                <td colspan="5"></td>
                <td>
                    <a href="~/Genero/PreAlterar/@item.Id" class="btn btn-warning">Alterar</a>
                </td>
                <td scope="row">
                    <a onclick="confirmaExclusao(@item.Id)" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>