<!DOCTYPE html>
<html lang="PT-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TelaAzul.styles.css" asp-append-version="true" />

    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand text-white text-decoration-none" 
                    asp-controller="Home" asp-action="Index">Tela Azul</a>

                <!-- Menu Hamburguer -->
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" 
                        data-bs-target="#menuNavegacao" aria-controls="menuNavegacao"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="menuNavegacao">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" role="button" href="#" aria-expanded="false"
                               data-bs-toggle="dropdown">Gêneros</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Genero" asp-action="Listar">Listar</a></li>
                                <li><a class="dropdown-item" asp-controller="Genero" asp-action="Cadastro">Cadastrar</a></li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" role="button" href="#" aria-expanded="false" 
                                data-bs-toggle="dropdown">Filmes</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Filme" asp-action="Listar">Listar</a></li>
                                <li><a class="dropdown-item" asp-controller="Filme" asp-action="Cadastro">Cadastrar</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" role="button" href="#" aria-expanded="false"
                               data-bs-toggle="dropdown">Funcionários</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Funcionario" asp-action="Listar">Listar</a></li>
                                <li><a class="dropdown-item" asp-controller="Funcionario" asp-action="Cadastro">Cadastrar</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" role="button" href="#" aria-expanded="false"
                               data-bs-toggle="dropdown">Clientes</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Cliente" asp-action="Listar">Listar</a></li>
                                <li><a class="dropdown-item" asp-controller="Cliente" asp-action="Cadastro">Cadastrar</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="mt-3 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TelaAzul 
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
