@model FilmeModel
@{
    ViewData["Title"] = "detalhes";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}


<div class="container-fluid m-2">
    <div class="row">
        <div class="col-4">
            <img class="img-thumbnail mr-2" src="~/Imagens/@Model.Imagem" alt="Imagem de Cartaz do Filme" />
        </div>

        <div class="col-12 col-sm-8">
            
            <!--<small>Model.Genero.Nome</small>-->
            <h2>@Model.Titulo</h2>

            <p><b>Sinopse:</b> @Model.Sinopse</p>
            <p><b>Duração do Filme:</b> @Model.Duracao minutos</p>
            <p><strong>Valor do Ingresso: R$ @Model.Valor</strong></p>
        
            <div class="mt-2">
                <button class="btn btn-info" href="~/Compras/ComprarIngresso/@Model.Id">Comprar</button>
            </div>

        </div>
    </div>
    
