@model TelaAzul.Models.FilmeModel
@{
    ViewData["Title"] = "cadastro";
}

<h1>Cadastrar Filmes</h1>

<form method="POST" asp-controller="Filme" asp-action="Salvar" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-2">
            <label for="id" class="form-label"  asp-for="Id"></label>
            <input type="text" asp-for="Id" name="id" class="form-control" readonly />
            <span asp-validation-for="Id" class="alert-danger"></span>
        </div>

        <div class="form-group col-5">
            <label for="titulo" class="form-label"  asp-for="Titulo"></label>
            <input type="text" asp-for="Titulo" name="titulo" class="form-control" required />
            <span asp-validation-for="Titulo" class="alert-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-12">
            <label for="sinopse" class="form-label" asp-for="Sinopse"></label>
            <textarea type="text" asp-for="Sinopse" name="sinopse" 
                        class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Sinopse" class="alert-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-4">
            <label for="duracao" class="form-label" asp-for="Duracao"></label>
            <input type="number" asp-for="Duracao" name="duracao" class="form-control" 
                   placeholder="Duração em minutos." required />
            <span asp-validation-for="Duracao" class="alert-danger"></span>
        </div>

        <div class="col-4" form-group>
            <label for="audio" class="form-check-label" asp-for="Audio"></label>
            <select class="form-control" asp-for="Audio" required>
                <option disabled>Seleciona o Áudio do Filme</option>
                <option>Dublado</option>
                <option>Inglês Legendado</option>
                <option>Inglês</option>
            </select>
            <span asp-validation-for="Audio" class="alert-danger"></span>
        </div>

        <div class="col-4 form-group">
            <label for="genero" class="form-label" asp-for="GeneroId"></label>
            <select class="form-control" asp-for="GeneroId" 
                    asp-items="@ViewBag.listaGeneros" required>
                <option>Selecione gênero do filme</option>
            </select>
            <span asp-validation-for="GeneroId" class="alert-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-6">
            <label for="imagem" class="form-label" asp-for="ArquivoImagem"></label>
            <input type="file" class="form-control" asp-for="ArquivoImagem" id="imagem" />
            <span asp-validation-for="ArquivoImagem" class="alert-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-12">
            <input type="submit" class="btn btn-dark" value="Cadastrar Filme" />
            <span class="alert @ViewBag.classe">@ViewBag.msg</span>
        </div>
    </div>

</form>
