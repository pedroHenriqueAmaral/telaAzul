@model IEnumerable<FilmeModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function confirmaExclusao(id) {
        if (confirm("Deseja excluir o filme? ")) {
            location.href = "/Filme/Excluir/" + id;
        }
    }
</script>

<h1>Lista de Filmes</h1>

<a href="~/Filme/Cadastro" class="btn btn-success">Cadastrar Novo Filme</a>

<span class="alert @ViewBag.classe">@ViewBag.msg</span>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Imagem</th>
            <th scope="col">Título</th>
            <th scope="col">Sinopse</th>
            <th scope="col">Duração (minutos)</th>
            <th scope="col">Áudio</th>
            <th scope="col">Valor</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td><img src="~/Imagens/@item.Imagem" asp-append-version="true" height="40"></td>
                <td>@item.Titulo</td>
                <td>@item.Sinopse</td>
                <td>@item.Duracao</td>
                <td>@item.Audio</td>
                <td>@item.Valor</td>
                <td>
                    <a href="~/Filme/PreAlterar/@item.Id" class="btn btn-warning">Alterar</a>
                </td>
                <td>
                    <a class="btn btn-danger" onclick="confirmaExclusao(@item.Id)">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>


