@model IEnumerable<ClienteModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function confirmaExclusao(id) {
        if (confirm("Têm certeza que deseja excluir o cliente? ")) {
            location.href = "/Cliente/Excluir/" + id;
        }
    }
</script>

<h1>Lista de Clientes</h1>

<span class="alert @ViewBag.classe">@ViewBag.msg</span>
<br />

<a href="~/Cliente/Cadastro" class="btn btn-success m-2">Cadastrar Cliente</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Nome</th>
            <td scope="col">Data de Nascimento</td>
            <th scope="col">E-mail</th>
            <!--<th scope="col">Tipo</th>-->
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nome</td>
                <td>@item.Data_Nascimento.ToString()</td>
                <td>@item.Email</td>
                <!--<td>@item.Tipo_Cliente</td>-->
                <td>
                    <a href="~/Filme/PreAlterar/@item.Id" class="btn btn-warning">Alterar</a>
                </td>
                <td>
                    <a href="#" class="btn btn-danger" onclick="confirmaExclusao(@item.Id)">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

