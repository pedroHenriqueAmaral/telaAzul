@model TelaAzul.Models.ClienteModel
@{
    ViewData["Title"] = "CadastroCliente";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<h1>Cadastro</h1>

<form method="POST" asp-controller="Cliente" asp-action="SalvarCliente">
    <div class="row">
        <div class="col-4 form-group">
            <!--<label for="id" class="form-label" asp-for="Id"></label>-->
            <input type="text" asp-for="Id" class="form-control" id="id" readonly hidden />
            <!--<span asp-validation-for="Id" class="alert-warning"></span>-->
        </div>
    </div>

    <div class="row">
        <div class="col-6 form-group">
            <label for="nome" class="form-label" asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" id="nome" />
            <span asp-validation-for="Nome" class="alert-warning"></span>
        </div>

        <div class="col-4 form-group">
            <label for="dataNascimento" class="form-label" asp-for="Data_Nascimento"></label>
            <input type="date" asp-for="Data_Nascimento"
                   class="form-control" id="dataNascimento" value="" />
            <span asp-validation-for="Data_Nascimento" class="alert-warning" />
        </div>
    </div>

    <div class="row">
        <div class="col-6 form-group">
            <label for="email" class="form-label" asp-for="Email"></label>
            <input type="email" asp-for="Email" 
                   class="form-control" id="email" />
            <span asp-validation-for="Email" class="alert-warning"></span>
        </div>

        <div class="col-6" form-group>
            <label for="senha" class="form-label" asp-for="Senha"></label>
            <input type="password" asp-for="Senha"
                   class="form-control" id="senha" />
            <span asp-validation-for="Senha" class="alert-warning"></span>
        </div>
    </div>

    <div class="row m-4">
        <input type="submit" class="btn btn-dark" value="Cadastrar" />
        <span class="alert @ViewBag.classe">@ViewBag.msg</span>
    </div>
</form>